    <LinearLayout android:orientation="vertical" android:id="@+id/llMusic" android:visibility="visible" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_margin="@dimen/margin_content">
        <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content">
            <RelativeLayout android:layout_width="50dp" android:layout_height="wrap_content" android:layout_alignParentRight="true">
                <Button android:id="@+id/ivEditColor" android:background="@drawable/imageedit" android:layout_width="@dimen/dp_50" android:layout_height="@dimen/dp_50" android:layout_below="@+id/ivRightMenu"/>
