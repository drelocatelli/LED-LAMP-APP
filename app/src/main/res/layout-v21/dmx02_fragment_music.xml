            <RelativeLayout android:layout_width="match_parent" android:layout_height="0dp" android:layout_marginLeft="10dp" android:layout_marginRight="10dp" android:layout_weight="1">
                <TextView android:textColor="@color/white" android:id="@+id/tvCurrentTime" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="0:00" android:layout_centerVertical="true"/>
                <SeekBar android:id="@+id/seekBarMusic" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_marginLeft="@dimen/dp_24" android:layout_marginRight="@dimen/dp_24" android:maxHeight="@dimen/dp_4" android:max="100" android:progressDrawable="@drawable/dmx02_seekbar_musicprogress" android:minHeight="@dimen/dp_2" android:thumb="@drawable/pointth" android:layout_centerVertical="true"/>
