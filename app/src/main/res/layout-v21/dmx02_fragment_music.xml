                    <TextView android:textSize="@dimen/text_size6" android:textColor="@color/white" android:gravity="center" android:id="@+id/textViewSensitivityDMX02" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/sensitivity"/>
