<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:background="@color/black" android:layout_width="match_parent" android:layout_height="match_parent">
    <RelativeLayout android:id="@+id/realativeLayoutHeader" android:background="@drawable/tab_bg" android:layout_width="match_parent" android:layout_height="@dimen/tab_height" android:layout_alignParentTop="true">
        <Button android:id="@+id/buttonBack" android:background="@drawable/arrow_left" android:layout_width="@dimen/dp_40" android:layout_height="@dimen/dp_30" android:layout_centerVertical="true"/>
        <TextView android:textSize="@dimen/text_size6" android:textStyle="bold" android:textColor="@color/white" android:gravity="center" android:padding="@dimen/margin_mid" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/music_lib" android:layout_centerInParent="true"/>
    </RelativeLayout>
    <LinearLayout android:gravity="center" android:orientation="horizontal" android:id="@+id/linearLayoutBottom" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="@dimen/dp_20" android:layout_alignParentBottom="true">
        <Button android:textColor="@color/white" android:id="@+id/buttonAddAll" android:background="@drawable/bottom_border" android:layout_width="@dimen/dp_100" android:layout_height="@dimen/dp_40" android:text="@string/add2lib_all"/>
        <Button android:textColor="@color/white" android:id="@+id/buttonConfirm" android:background="@drawable/bottom_border" android:layout_width="@dimen/dp_100" android:layout_height="@dimen/dp_40" android:text="@string/add2lib" android:layout_marginStart="@dimen/dp_50"/>
    </LinearLayout>
    <ListView android:id="@+id/listViewMuiscsList" android:scrollbars="none" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_above="@+id/linearLayoutBottom" android:layout_below="@+id/realativeLayoutHeader" style="@style/List"/>
</RelativeLayout>
