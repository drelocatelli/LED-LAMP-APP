<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:background="@color/app_color_white" android:layout_width="match_parent" android:layout_height="match_parent">
    <RelativeLayout android:id="@+id/rl_title" android:background="@color/app_color_grey" android:layout_width="match_parent" android:layout_height="48dp">
        <ImageView android:id="@+id/left_back" android:background="@color/app_color_transparent" android:padding="15dp" android:visibility="visible" android:layout_width="wrap_content" android:layout_height="match_parent" android:src="@drawable/picture_icon_back" android:layout_centerVertical="true"/>
        <TextView android:textSize="18sp" android:textColor="@color/app_color_white" android:ellipsize="end" android:id="@+id/tv_title" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/app_name" android:maxEms="11" android:layout_centerInParent="true" android:layout_centerVertical="true"/>
        <TextView android:textSize="15sp" android:textColor="@color/app_color_white" android:gravity="center" android:id="@+id/tv_right" android:layout_width="48dp" android:layout_height="match_parent" android:layout_marginRight="5dp" android:text="" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
    </RelativeLayout>
    <androidx.recyclerview.widget.RecyclerView android:id="@+id/recycler" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="5dp" android:layout_marginTop="5dp" android:overScrollMode="never"/>
    <ScrollView android:scrollbars="none" android:layout_width="match_parent" android:layout_height="wrap_content">
        <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
            <include layout="@layout/layout_number"/>
            <RadioGroup android:gravity="center_vertical" android:orientation="vertical" android:id="@+id/rgb_style" android:layout_width="match_parent" android:layout_height="wrap_content">
                <RadioButton android:textSize="14sp" android:textColor="@color/app_color_53575e" android:id="@+id/rb_default_style" android:layout_width="wrap_content" android:layout_height="wrap_content" android:checked="true" android:text="默认样式"/>
                <RadioButton android:textSize="14sp" android:textColor="@color/app_color_53575e" android:id="@+id/rb_white_style" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="样式一"/>
                <RadioButton android:textSize="14sp" android:textColor="@color/app_color_53575e" android:id="@+id/rb_num_style" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="样式二"/>
                <RadioButton android:textSize="14sp" android:textColor="@color/app_color_53575e" android:id="@+id/rb_sina_style" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="样式三"/>
            </RadioGroup>
            <CheckBox android:textSize="14sp" android:textColor="@color/app_color_53575e" android:gravity="center_vertical" android:id="@+id/cb_voice" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="是否开启点击声音"/>
            <RadioGroup android:orientation="horizontal" android:id="@+id/rgb_langue" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content">
                <RadioButton android:textSize="14sp" android:textColor="@color/app_color_53575e" android:id="@+id/rb_zh" android:layout_width="wrap_content" android:layout_height="wrap_content" android:checked="true" android:text="中文"/>
                <RadioButton android:textSize="14sp" android:textColor="@color/app_color_53575e" android:id="@+id/rb_tw" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="繁体"/>
                <RadioButton android:textSize="14sp" android:textColor="@color/app_color_53575e" android:id="@+id/rb_us" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="英语"/>
                <RadioButton android:textSize="14sp" android:textColor="@color/app_color_53575e" android:id="@+id/rb_ka" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="韩语"/>
                <RadioButton android:textSize="14sp" android:textColor="@color/app_color_53575e" android:id="@+id/rb_de" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="德语"/>
                <RadioButton android:textSize="14sp" android:textColor="@color/app_color_53575e" android:id="@+id/rb_fr" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="法语"/>
            </RadioGroup>
            <RadioGroup android:gravity="center_vertical" android:orientation="horizontal" android:id="@+id/rgb_photo_mode" android:layout_width="match_parent" android:layout_height="wrap_content">
                <RadioButton android:textSize="14sp" android:textColor="@color/app_color_53575e" android:id="@+id/rb_all" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="全部"/>
                <RadioButton android:textSize="14sp" android:textColor="@color/app_color_53575e" android:id="@+id/rb_image" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="5dp" android:text="图片"/>
                <RadioButton android:textSize="14sp" android:textColor="@color/app_color_53575e" android:id="@+id/rb_video" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="5dp" android:text="视频"/>
                <RadioButton android:textSize="14sp" android:textColor="@color/app_color_53575e" android:id="@+id/rb_audio" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="5dp" android:text="音频"/>
            </RadioGroup>
            <CheckBox android:textSize="14sp" android:textColor="@color/app_color_53575e" android:gravity="center_vertical" android:id="@+id/cb_mode" android:layout_width="wrap_content" android:layout_height="wrap_content" android:checked="true" android:text="相册or单独拍照"/>
            <CheckBox android:textSize="14sp" android:textColor="@color/app_color_53575e" android:gravity="center_vertical" android:id="@+id/cb_choose_mode" android:layout_width="wrap_content" android:layout_height="wrap_content" android:checked="true" android:text="单选or多选"/>
            <CheckBox android:textSize="14sp" android:textColor="@color/app_color_53575e" android:gravity="center_vertical" android:id="@+id/cb_isCamera" android:layout_width="wrap_content" android:layout_height="wrap_content" android:checked="true" android:text="显示or隐藏拍摄"/>
            <CheckBox android:textSize="14sp" android:textColor="@color/app_color_53575e" android:gravity="center_vertical" android:id="@+id/cb_isGif" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="是否显示Gif图片"/>
            <CheckBox android:textSize="14sp" android:textColor="@color/app_color_53575e" android:gravity="center_vertical" android:id="@+id/cb_preview_img" android:layout_width="wrap_content" android:layout_height="wrap_content" android:checked="true" android:text="是否预览图片"/>
            <CheckBox android:textSize="14sp" android:textColor="@color/app_color_53575e" android:gravity="center_vertical" android:id="@+id/cb_preview_video" android:layout_width="wrap_content" android:layout_height="wrap_content" android:checked="true" android:text="是否预览视频"/>
            <CheckBox android:textSize="14sp" android:textColor="@color/app_color_53575e" android:gravity="center_vertical" android:id="@+id/cb_preview_audio" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:checked="true" android:text="是否预览音频"/>
            <CheckBox android:textSize="14sp" android:textColor="@color/app_color_53575e" android:gravity="center_vertical" android:id="@+id/cb_compress" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="是否压缩图片"/>
            <CheckBox android:textSize="14sp" android:textColor="@color/app_color_53575e" android:gravity="center_vertical" android:id="@+id/cb_crop" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="是否裁剪图片"/>
            <RadioGroup android:gravity="center_vertical" android:orientation="horizontal" android:id="@+id/rgb_crop" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content">
                <RadioButton android:textSize="14sp" android:textColor="@color/app_color_53575e" android:id="@+id/rb_crop_default" android:layout_width="wrap_content" android:layout_height="wrap_content" android:checked="true" android:text="默认"/>
                <RadioButton android:textSize="14sp" android:textColor="@color/app_color_53575e" android:id="@+id/rb_crop_1to1" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="5dp" android:text="1:1"/>
                <RadioButton android:textSize="14sp" android:textColor="@color/app_color_53575e" android:id="@+id/rb_crop_3to4" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="5dp" android:text="3:4"/>
                <RadioButton android:textSize="14sp" android:textColor="@color/app_color_53575e" android:id="@+id/rb_crop_3to2" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="5dp" android:text="3:2"/>
                <RadioButton android:textSize="14sp" android:textColor="@color/app_color_53575e" android:id="@+id/rb_crop_16to9" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="5dp" android:text="16:9"/>
            </RadioGroup>
            <CheckBox android:textSize="14sp" android:textColor="@color/app_color_53575e" android:gravity="center_vertical" android:id="@+id/cb_crop_circular" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="圆形头像裁剪模式"/>
            <CheckBox android:textSize="14sp" android:textColor="@color/app_color_53575e" android:gravity="center_vertical" android:id="@+id/cb_showCropGrid" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:checked="true" android:text="是否显示裁剪框网格"/>
            <CheckBox android:textSize="14sp" android:textColor="@color/app_color_53575e" android:gravity="center_vertical" android:id="@+id/cb_showCropFrame" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:checked="true" android:text="是否显示裁剪边框"/>
            <CheckBox android:textSize="14sp" android:textColor="@color/app_color_53575e" android:gravity="center_vertical" android:id="@+id/cb_styleCrop" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="裁剪框or图片拖动"/>
            <CheckBox android:textSize="14sp" android:textColor="@color/app_color_53575e" android:gravity="center_vertical" android:id="@+id/cb_hide" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="是否显示裁剪菜单栏"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
