<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:background="@color/blue" android:layout_width="match_parent" android:layout_height="match_parent">
    <RelativeLayout android:id="@+id/relativeLayoutHeader" android:background="@color/black" android:layout_width="match_parent" android:layout_height="@dimen/dp_45">
        <Button android:id="@+id/buttonCancell" android:background="@drawable/back_nomal" android:layout_width="@dimen/dp_45" android:layout_height="@dimen/dp_40" android:layout_centerVertical="true"/>
        <TextView android:textSize="@dimen/text_size7" android:textColor="@color/white" android:gravity="center" android:id="@+id/textViewID" android:layout_width="wrap_content" android:layout_height="match_parent" android:text="@string/currentquery" android:layout_centerHorizontal="true"/>
        <TextView android:textSize="@dimen/text_size6" android:textColor="@color/white" android:id="@+id/tvQuery" android:background="@android:color/transparent" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="@dimen/dp_10" android:text="@string/query" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
    </RelativeLayout>
    <LinearLayout android:orientation="vertical" android:background="@color/blue" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_marginLeft="@dimen/margin_content" android:layout_marginTop="@dimen/dp_10" android:layout_marginRight="@dimen/margin_content">
        <RelativeLayout android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="8">
            <LinearLayout android:orientation="vertical" android:id="@+id/linearLayoutTimer" android:visibility="visible" android:layout_width="match_parent" android:layout_height="match_parent">
                <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="0dp" android:layout_marginTop="10dp" android:layout_weight="7">
                    <LinearLayout android:gravity="center" android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content">
                        <TextView android:textSize="@dimen/text_size3" android:textColor="@color/white" android:gravity="center" android:background="@color/transparent" android:layout_width="0dp" android:layout_height="20dp" android:text="@string/temperature" android:layout_weight="1"/>
                        <TextView android:textSize="@dimen/text_size3" android:textColor="@color/white" android:gravity="center" android:background="@color/transparent" android:layout_width="0dp" android:layout_height="20dp" android:text="@string/time" android:layout_weight="1"/>
                        <RelativeLayout android:gravity="center" android:orientation="horizontal" android:id="@+id/rl_Red" android:layout_width="0dp" android:layout_height="20dp" android:layout_weight="1">
                            <View android:id="@+id/viewColorRed" android:background="@drawable/color_block_bright_red" android:layout_width="20dp" android:layout_height="20dp"/>
                        </RelativeLayout>
                        <RelativeLayout android:gravity="center" android:orientation="horizontal" android:id="@+id/rl_Green" android:layout_width="0dp" android:layout_height="20dp" android:layout_weight="1">
                            <View android:id="@+id/viewColorGreen" android:tag="viewColorGreen" android:background="@drawable/color_block_bright_green" android:layout_width="20dp" android:layout_height="20dp"/>
                        </RelativeLayout>
                        <RelativeLayout android:gravity="center" android:orientation="horizontal" android:id="@+id/rl_Blue" android:layout_width="0dp" android:layout_height="20dp" android:layout_weight="1">
                            <View android:id="@+id/viewColorBlue" android:tag="viewColorBlue" android:background="@drawable/color_block_bright_lightblue" android:layout_width="20dp" android:layout_height="20dp"/>
                        </RelativeLayout>
                        <RelativeLayout android:gravity="center" android:orientation="horizontal" android:id="@+id/rl_White" android:layout_width="0dp" android:layout_height="20dp" android:layout_weight="1">
                            <View android:id="@+id/viewColorWhite" android:tag="viewColorWhite" android:background="@drawable/color_block_bright_white" android:layout_width="20dp" android:layout_height="20dp"/>
                        </RelativeLayout>
                        <RelativeLayout android:gravity="center" android:orientation="horizontal" android:id="@+id/rl_Cyan" android:layout_width="0dp" android:layout_height="20dp" android:layout_weight="1">
                            <View android:id="@+id/viewColorCyan" android:tag="viewColorCyan" android:background="@drawable/color_block_bright_crystal" android:layout_width="20dp" android:layout_height="20dp"/>
                        </RelativeLayout>
                        <RelativeLayout android:gravity="center" android:orientation="horizontal" android:id="@+id/rl_Purple" android:layout_width="0dp" android:layout_height="20dp" android:layout_weight="1">
                            <View android:id="@+id/viewColorPurple" android:tag="viewColorPurple" android:background="@drawable/color_block_bright_pink" android:layout_width="20dp" android:layout_height="20dp"/>
                        </RelativeLayout>
                    </LinearLayout>
                    <LinearLayout android:gravity="center" android:orientation="horizontal" android:id="@+id/linearLayoutTimerLine" android:tag="linearLayoutTimerLine1" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="10dp">
                        <TextView android:textSize="@dimen/text_size3" android:textColor="@color/white" android:gravity="center" android:id="@+id/tvTemperature" android:background="@color/transparent" android:layout_width="0dp" android:layout_height="20dp" android:text="0" android:layout_weight="1"/>
                        <TextView android:textSize="@dimen/text_size3" android:textColor="@color/white" android:gravity="center" android:id="@+id/tvTime" android:tag="time" android:background="@color/transparent" android:layout_width="0dp" android:layout_height="20dp" android:text="00:00" android:layout_weight="1"/>
                        <TextView android:textSize="@dimen/text_size3" android:textColor="@color/white" android:gravity="center" android:id="@+id/tvRed" android:tag="red" android:background="@color/transparent" android:layout_width="0dp" android:layout_height="20dp" android:text="0" android:layout_weight="1"/>
                        <TextView android:textSize="@dimen/text_size3" android:textColor="@color/white" android:gravity="center" android:id="@+id/tvGreen" android:tag="green" android:background="@color/transparent" android:layout_width="0dp" android:layout_height="20dp" android:text="0" android:layout_weight="1"/>
                        <TextView android:textSize="@dimen/text_size3" android:textColor="@color/white" android:gravity="center" android:id="@+id/tvBlue" android:tag="lightblue" android:background="@color/transparent" android:layout_width="0dp" android:layout_height="20dp" android:text="0" android:layout_weight="1"/>
                        <TextView android:textSize="@dimen/text_size3" android:textColor="@color/white" android:gravity="center" android:id="@+id/tvWhite" android:tag="white" android:background="@color/transparent" android:layout_width="0dp" android:layout_height="20dp" android:text="0" android:layout_weight="1"/>
                        <TextView android:textSize="@dimen/text_size3" android:textColor="@color/white" android:gravity="center" android:id="@+id/tvCycan" android:tag="crystal" android:background="@color/transparent" android:layout_width="0dp" android:layout_height="20dp" android:text="0" android:layout_weight="1"/>
                        <TextView android:textSize="@dimen/text_size3" android:textColor="@color/white" android:gravity="center" android:id="@+id/tvPurple" android:tag="pink" android:background="@color/transparent" android:layout_width="0dp" android:layout_height="20dp" android:text="0" android:layout_weight="1"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>
