<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:gravity="top|center_horizontal" android:orientation="vertical" android:background="@drawable/bg_all" android:layout_width="match_parent" android:layout_height="match_parent">
    <RelativeLayout android:id="@+id/relativeLayoutHeader" android:background="@color/blue" android:layout_width="match_parent" android:layout_height="@dimen/tab_height">
        <ImageView android:id="@+id/Back" android:background="@drawable/arrow_left" android:layout_width="@dimen/dp_40" android:layout_height="@dimen/dp_30" android:layout_alignParentLeft="true" android:layout_centerVertical="true"/>
        <TextView android:textSize="20sp" android:textColor="@color/white" android:gravity="center" android:id="@+id/tvTitle" android:layout_width="match_parent" android:layout_height="@dimen/tab_height" android:text="@string/tv_chip_set"/>
    </RelativeLayout>
    <LinearLayout android:paddingTop="20dp" android:layout_width="match_parent" android:layout_height="wrap_content">
        <TextView android:textColor="@color/white" android:gravity="center" android:layout_width="0dp" android:layout_height="wrap_content" android:text="@string/rgb_sort" android:layout_weight="1"/>
    </LinearLayout>
    <LinearLayout android:paddingTop="20dp" android:layout_width="match_parent" android:layout_height="280dp">
        <ListView android:id="@+id/lv_left" android:background="@color/transparent" android:layout_width="0dp" android:layout_height="200dp" android:divider="@null" android:choiceMode="singleChoice" android:layout_weight="1"/>
    </LinearLayout>
    <LinearLayout android:paddingTop="10dp" android:layout_width="match_parent" android:layout_height="wrap_content">
        <Button android:gravity="center" android:id="@+id/btn_pix_set" android:background="#00ff00" android:layout_width="match_parent" android:layout_height="match_parent" android:text="@string/btn_set_pix_number" android:layout_weight="1"/>
        <Button android:textColor="#ffffff" android:gravity="center" android:id="@+id/tv_pix_num" android:background="#000000" android:layout_width="match_parent" android:layout_height="match_parent" android:text="@string/btn_pix_number" android:layout_weight="1"/>
    </LinearLayout>
    <LinearLayout android:paddingTop="40dp" android:layout_width="match_parent" android:layout_height="wrap_content">
        <TextView android:textColor="@color/white" android:gravity="center" android:id="@+id/tv_rgb_result" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1"/>
        <TextView android:textColor="@color/white" android:gravity="center" android:id="@+id/tv_pix_result" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1"/>
    </LinearLayout>
    <LinearLayout android:gravity="center" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
        <Button android:textColor="@color/white" android:layout_gravity="center_horizontal" android:id="@+id/button_chipselect_ok" android:background="@drawable/bottom_border" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/ok"/>
    </LinearLayout>
</LinearLayout>
