<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:orientation="vertical" android:background="@color/white" android:layout_width="match_parent" android:layout_height="match_parent">
    <RelativeLayout android:layout_gravity="center_vertical" android:background="@color/blue" android:layout_width="match_parent" android:layout_height="@dimen/tab_hight">
        <TextView android:textSize="@dimen/textsize_nav_bar" android:textColor="@android:color/white" android:gravity="center" android:id="@+id/textViewNavCenter" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/Language" android:layout_centerInParent="true"/>
        <TextView android:textSize="@dimen/textsize_nav_bar" android:id="@+id/textViewNavLeft" android:background="@drawable/back_nomal" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/navbar_marginLeft" android:layout_alignParentLeft="true" android:layout_centerVertical="true"/>
        <ImageButton android:gravity="center" android:id="@+id/imageViewNavRight" android:background="@drawable/refresh_icon_black" android:visibility="gone" android:layout_width="@dimen/nav_img_size" android:layout_height="@dimen/nav_img_size" android:layout_marginRight="@dimen/navbar_marginRight" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
    </RelativeLayout>
    <RelativeLayout android:id="@+id/rl_followsytem" android:visibility="visible" android:clickable="true" android:layout_width="match_parent" android:layout_height="50dp">
        <TextView android:textSize="16dp" android:id="@+id/tv_followsystem" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="20dp" android:text="@string/setting_language_auto" android:layout_centerVertical="true"/>
        <ImageView android:id="@+id/iv_followsystem" android:visibility="visible" android:layout_width="20dp" android:layout_height="20dp" android:layout_marginRight="20dp" android:src="@drawable/language_select" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
    </RelativeLayout>
    <View android:background="#e5e5e5" android:layout_width="match_parent" android:layout_height="1px"/>
    <RelativeLayout android:id="@+id/rl_simplified_chinese" android:visibility="visible" android:clickable="true" android:layout_width="match_parent" android:layout_height="50dp">
        <TextView android:textSize="16dp" android:id="@+id/tv_simplified_chinese" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="20dp" android:text="@string/setting_simplified_chinese" android:layout_centerVertical="true"/>
        <ImageView android:id="@+id/iv_simplified_chinese" android:visibility="visible" android:layout_width="20dp" android:layout_height="20dp" android:layout_marginRight="20dp" android:src="@drawable/language_select" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
    </RelativeLayout>
    <View android:background="#e5e5e5" android:layout_width="match_parent" android:layout_height="1px"/>
    <RelativeLayout android:id="@+id/rl_traditional_chinese" android:visibility="visible" android:clickable="true" android:layout_width="match_parent" android:layout_height="50dp">
        <TextView android:textSize="16dp" android:id="@+id/tv_traditional_chinese" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="20dp" android:text="@string/setting_traditional_chinese" android:layout_centerVertical="true"/>
        <ImageView android:id="@+id/iv_traditional_chinese" android:visibility="gone" android:layout_width="20dp" android:layout_height="20dp" android:layout_marginRight="20dp" android:src="@drawable/language_select" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
    </RelativeLayout>
    <View android:background="#e5e5e5" android:layout_width="match_parent" android:layout_height="1px"/>
    <RelativeLayout android:id="@+id/rl_english" android:visibility="visible" android:clickable="true" android:layout_width="match_parent" android:layout_height="50dp">
        <TextView android:textSize="16dp" android:id="@+id/tv_english" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="20dp" android:text="@string/setting_language_english" android:layout_centerVertical="true"/>
        <ImageView android:id="@+id/iv_english" android:visibility="gone" android:layout_width="20dp" android:layout_height="20dp" android:layout_marginRight="20dp" android:src="@drawable/language_select" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
    </RelativeLayout>
    <View android:background="#e5e5e5" android:layout_width="match_parent" android:layout_height="1px"/>
</LinearLayout>
