<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:paddingTop="@dimen/dp_5" android:paddingBottom="@dimen/dp_5" android:layout_width="match_parent" android:layout_height="wrap_content">
    <LinearLayout android:gravity="center" android:layout_width="match_parent" android:layout_height="wrap_content">
        <LinearLayout android:orientation="vertical" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="4">
            <LinearLayout android:gravity="center" android:layout_width="match_parent" android:layout_height="wrap_content">
                <TextView android:textSize="@dimen/text_size4" android:textColor="@drawable/item_text_selector_like" android:id="@+id/textViewTitle" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dp_20"/>
            </LinearLayout>
            <LinearLayout android:gravity="center" android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content">
                <TextView android:textSize="@dimen/text_size3" android:textColor="@drawable/item_text_selector_like" android:id="@+id/textViewAblum" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dp_20" android:singleLine="true" android:layout_weight="2"/>
                <TextView android:textSize="@dimen/text_size2" android:textStyle="italic" android:textColor="@drawable/item_text_selector_like" android:id="@+id/textViewSinger" android:layout_width="0dp" android:layout_height="wrap_content" android:singleLine="true" android:layout_weight="1"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout android:gravity="center" android:layout_width="0dp" android:layout_height="@dimen/tab_height" android:layout_weight="0.8">
            <CheckBox android:id="@+id/checkBoxSelect" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" style="@style/CustomCheckboxTheme"/>
            <TextView android:textSize="@dimen/text_size3" android:textStyle="italic" android:textColor="@drawable/item_text_selector_like" android:id="@+id/tvTotalSize" android:layout_width="0dp" android:layout_height="wrap_content" android:singleLine="true" android:layout_weight="1"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
