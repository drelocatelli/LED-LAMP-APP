<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:background="@color/black" android:layout_width="match_parent" android:layout_height="match_parent">
    <RelativeLayout android:background="@drawable/tab_bg" android:layout_width="match_parent" android:layout_height="50dp">
        <ImageView android:id="@+id/back" android:layout_width="@dimen/dp_45" android:layout_height="@dimen/dp_45" android:src="@drawable/back_nomal" android:layout_centerVertical="true"/>
        <TextView android:textSize="@dimen/dp_24" android:textColor="@color/white" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/addTimer" android:layout_centerHorizontal="true" android:layout_centerVertical="true"/>
        <ImageView android:id="@+id/ivAddTimer" android:layout_width="@dimen/dp_40" android:layout_height="wrap_content" android:src="@drawable/abcd" android:layout_alignParentRight="true"/>
    </RelativeLayout>
    <GridView android:id="@+id/gv" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_marginTop="50dp" android:layout_alignParentStart="true"/>
    <LinearLayout android:gravity="center" android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dp_20" android:layout_marginRight="@dimen/dp_20" android:layout_marginBottom="30dp" android:layout_alignParentBottom="true">
        <Button android:textSize="14sp" android:textColor="@color/white" android:id="@+id/sure" android:background="@drawable/bottom_border" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_marginRight="@dimen/dp_10" android:text="@string/Sendtiming" android:layout_weight="1"/>
        <Button android:textSize="14sp" android:textColor="@color/white" android:id="@+id/closeTime" android:background="@drawable/bottom_border" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dp_10" android:text="@string/Closetiming" android:layout_weight="1"/>
    </LinearLayout>
</RelativeLayout>
