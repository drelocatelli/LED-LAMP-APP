<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout android:orientation="vertical" android:id="@+id/llComment" android:background="@color/white" android:paddingLeft="12dp" android:paddingRight="12dp" android:paddingBottom="5dp" android:layout_width="match_parent" android:layout_height="wrap_content">
        <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content">
            <LinearLayout android:orientation="vertical" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1">
                <TextView android:textSize="20sp" android:textColor="@color/black" android:ellipsize="end" android:id="@+id/tvTitle" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dp_10" android:maxLines="1"/>
                <TextView android:textSize="14sp" android:textColor="#666666" android:ellipsize="end" android:id="@+id/tv_content" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dp_8" android:maxLines="4"/>
            </LinearLayout>
            <ImageView android:layout_gravity="center" android:id="@+id/iv_pichtor" android:layout_width="100sp" android:layout_height="100sp" android:layout_marginTop="@dimen/dp_10" android:src="@drawable/default_common" android:layout_alignParentRight="true"/>
        </LinearLayout>
        <RelativeLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="@dimen/dp_24" android:layout_marginTop="@dimen/dp_8" android:layout_marginBottom="@dimen/dp_2">
            <com.video.CircleImageView android:id="@+id/iv_Author" android:layout_width="@dimen/dp_24" android:layout_height="@dimen/dp_24" android:src="@drawable/icon_my_default"/>
            <TextView android:textSize="12sp" android:textColor="@color/t_color_author" android:id="@+id/tvAuthor" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dp_30" android:layout_centerVertical="true"/>
            <TextView android:textSize="14sp" android:textColor="@color/grayDark" android:id="@+id/tvDate" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
        </RelativeLayout>
    </LinearLayout>
    <TextView android:background="@color/blue" android:layout_width="match_parent" android:layout_height="2dp"/>
</LinearLayout>
