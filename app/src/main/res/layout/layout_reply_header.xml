<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
    <LinearLayout android:orientation="vertical" android:padding="12dp" android:layout_width="match_parent" android:layout_height="wrap_content">
        <com.common.view.selectabletext.SelectableTextView android:textSize="22sp" android:textColor="@color/black" android:id="@+id/tvCommentTitle" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="8dp" android:lineSpacingExtra="2dp" app:cursor_handle_color="@color/holo_blue_bright" app:selected_color="#add8e6"/>
        <TextView android:textSize="14sp" android:textColor="@color/grayDark" android:id="@+id/tvCount" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="8dp" android:text="@string/reply"/>
    </LinearLayout>
    <LinearLayout android:orientation="vertical" android:padding="5dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dp_5" android:layout_marginRight="@dimen/dp_5">
        <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="@dimen/dp_30">
            <com.video.CircleImageView android:id="@+id/ci_1" android:layout_width="@dimen/dp_30" android:layout_height="@dimen/dp_30" android:src="@drawable/user_pic"/>
            <TextView android:textSize="14sp" android:textColor="@color/t_color_author" android:id="@+id/tvAuthor" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dp_8"/>
            <TextView android:textSize="10sp" android:textColor="@color/white" android:id="@+id/tvFloorHost" android:background="@color/colorPrimary" android:padding="1dp" android:visibility="visible" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="8dp" android:text="@string/floor_host"/>
            <TextView android:textSize="14sp" android:textColor="@color/grayDark" android:gravity="right" android:id="@+id/tvDate" android:visibility="visible" android:layout_width="0dp" android:layout_height="wrap_content" android:text="@string/second" android:layout_weight="1"/>
        </LinearLayout>
        <TextView android:textSize="12sp" android:textColor="@color/grayDark" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="4dp"/>
        <com.common.view.selectabletext.SelectableTextView android:textSize="16sp" android:textColor="#666666" android:id="@+id/tvCommentContent" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="20dp" android:layout_marginBottom="@dimen/dp_20" android:lineSpacingExtra="2dp" app:cursor_handle_color="@color/holo_blue_bright" app:selected_color="#add8e6"/>
        <GridView android:id="@+id/gvImage" android:visibility="gone" android:scrollbars="none" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="2dp" android:layout_marginBottom="@dimen/dp_20" android:horizontalSpacing="@dimen/dp_5" android:verticalSpacing="@dimen/dp_5" android:numColumns="3"/>
        <RelativeLayout android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content">
            <TextView android:textColor="@color/blue" android:id="@+id/tv_say" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dp_5" android:layout_marginRight="@dimen/dp_20" android:text="@string/reply" android:layout_alignParentRight="true"/>
            <TextView android:textColor="@color/blue" android:id="@+id/tv_comment" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dp_5" android:layout_marginRight="@dimen/dp_30" android:text="@string/look" android:layout_alignParentRight="true"/>
        </RelativeLayout>
    </LinearLayout>
    <TextView android:background="@color/line_gray_color" android:layout_width="match_parent" android:layout_height="5dp"/>
</LinearLayout>
