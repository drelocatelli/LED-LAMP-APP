<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent" android:layout_height="match_parent">
    <com.ccr.achenglibrary.photopicker.widget.CCRHackyViewPager android:id="@+id/hvp_photo_preview_content" android:background="@color/bga_pp_activity_bg" android:layout_width="match_parent" android:layout_height="match_parent" android:overScrollMode="never"/>
    <RelativeLayout android:background="@color/transparent" android:paddingLeft="20dp" android:paddingRight="20dp" android:clickable="true" android:layout_width="match_parent" android:layout_height="50dp" android:layout_alignParentBottom="true">
        <TextView android:textColor="#fff" android:gravity="center" android:id="@+id/save_button" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="保存" android:layout_alignParentLeft="true" android:layout_centerInParent="true"/>
        <TextView android:textColor="#fff" android:gravity="center" android:id="@+id/number_text" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="1/1" android:layout_centerInParent="true"/>
        <TextView android:textColor="#fff" android:gravity="center" android:id="@+id/share_button" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="分享" android:layout_alignParentRight="true" android:layout_centerInParent="true"/>
    </RelativeLayout>
    <include layout="@layout/save_image_layout"/>
</RelativeLayout>
