<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:background="@color/blue" android:layout_width="match_parent" android:layout_height="match_parent">
    <RelativeLayout android:id="@+id/relativeLayoutHeader" android:background="@drawable/tab_bg" android:layout_width="match_parent" android:layout_height="@dimen/tab_height">
        <ImageView android:id="@+id/buttonCancell" android:background="@drawable/arrow_left" android:layout_width="@dimen/dp_40" android:layout_height="@dimen/dp_30" android:layout_alignParentLeft="true" android:layout_centerVertical="true"/>
        <TextView android:textSize="25sp" android:textColor="@color/blue" android:gravity="center" android:id="@+id/textViewID" android:layout_width="wrap_content" android:layout_height="match_parent" android:text="@string/currentquery" android:layout_centerHorizontal="true"/>
        <Button android:textSize="@dimen/text_size6" android:textColor="@color/text_color_blue" android:id="@+id/buttonSave" android:background="@android:color/transparent" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="@dimen/margin_mid" android:text="@string/save" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
    </RelativeLayout>
    <RelativeLayout android:background="@color/blue" android:layout_width="match_parent" android:layout_height="@dimen/tab_height">
        <TextView android:textColor="@color/white" android:gravity="center" android:id="@+id/tvQuery" android:background="@drawable/color_block_bright_red" android:layout_width="60dp" android:layout_height="30dp" android:text="@string/query" android:layout_centerHorizontal="true" android:layout_centerVertical="true"/>
    </RelativeLayout>
    <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_marginLeft="@dimen/margin_content" android:layout_marginRight="@dimen/margin_content">
        <RelativeLayout android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="4">
            <LinearLayout android:orientation="vertical" android:visibility="visible" android:layout_width="match_parent" android:layout_height="match_parent">
                <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="0dp" android:layout_marginTop="10dp" android:layout_weight="4">
                    <LinearLayout android:gravity="center" android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content">
                        <TextView android:textSize="@dimen/text_size3" android:textColor="@color/white" android:gravity="center" android:background="@color/transparent" android:layout_width="60dp" android:layout_height="@dimen/color_block_size" android:layout_marginLeft="@dimen/margin_mid" android:layout_marginRight="0dp" android:text="@string/temperature"/>
                        <TextView android:textSize="@dimen/text_size3" android:textColor="@color/white" android:gravity="center" android:id="@+id/tvTime" android:background="@color/transparent" android:layout_width="60dp" android:layout_height="@dimen/color_block_size" android:layout_marginLeft="0dp" android:layout_marginRight="@dimen/margin_content" android:text="@string/battery"/>
                        <View android:tag="viewColor1" android:background="@drawable/color_block_bright_red" android:visibility="gone" android:layout_width="20dp" android:layout_height="20dp" android:layout_marginLeft="@dimen/margin_content" android:layout_marginRight="@dimen/margin_content"/>
                        <View android:tag="viewColor2" android:background="@drawable/color_block_bright_green" android:visibility="gone" android:layout_width="20dp" android:layout_height="20dp" android:layout_marginLeft="@dimen/margin_content" android:layout_marginRight="@dimen/margin_content"/>
                        <View android:tag="viewColor3" android:background="@drawable/color_block_bright_lightblue" android:visibility="gone" android:layout_width="20dp" android:layout_height="20dp" android:layout_marginLeft="@dimen/margin_content" android:layout_marginRight="@dimen/margin_content"/>
                        <View android:tag="viewColor4" android:background="@drawable/color_block_bright_white" android:visibility="gone" android:layout_width="20dp" android:layout_height="20dp" android:layout_marginLeft="@dimen/margin_content" android:layout_marginRight="@dimen/margin_content"/>
                        <View android:tag="viewColor5" android:background="@drawable/color_block_bright_crystal" android:visibility="gone" android:layout_width="20dp" android:layout_height="20dp" android:layout_marginLeft="@dimen/margin_content" android:layout_marginRight="@dimen/margin_content"/>
                        <View android:tag="viewColor6" android:background="@drawable/color_block_bright_pink" android:visibility="gone" android:layout_width="20dp" android:layout_height="20dp" android:layout_marginLeft="@dimen/margin_content" android:layout_marginRight="@dimen/margin_content"/>
                    </LinearLayout>
                    <LinearLayout android:gravity="center" android:orientation="horizontal" android:id="@+id/linearLayoutTimerLine1" android:tag="linearLayoutTimerLine1" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="0dp">
                        <TextView android:textSize="@dimen/text_size4" android:textColor="@color/white" android:gravity="center" android:id="@+id/tvTemperature" android:background="@color/transparent" android:layout_width="60dp" android:layout_height="@dimen/color_block_size" android:layout_marginLeft="@dimen/margin_mid" android:layout_marginRight="0dp" android:text="0"/>
                        <TextView android:textSize="@dimen/text_size3" android:textColor="@color/white" android:gravity="center" android:id="@+id/tvBattery" android:tag="time" android:background="@color/transparent" android:layout_width="60dp" android:layout_height="@dimen/color_block_size" android:layout_marginLeft="0dp" android:layout_marginRight="@dimen/margin_content" android:text="0"/>
                        <TextView android:textSize="@dimen/text_size4" android:textColor="@color/white" android:gravity="center" android:id="@+id/tvRed" android:tag="red" android:background="@color/transparent" android:visibility="gone" android:layout_width="30dp" android:layout_height="20dp" android:layout_marginLeft="@dimen/margin_mid" android:layout_marginRight="@dimen/margin_mid" android:text="0"/>
                        <TextView android:textSize="@dimen/text_size4" android:textColor="@color/white" android:gravity="center" android:id="@+id/tvGreen" android:tag="green" android:background="@color/transparent" android:visibility="gone" android:layout_width="30dp" android:layout_height="20dp" android:layout_marginLeft="@dimen/margin_mid" android:layout_marginRight="@dimen/margin_mid" android:text="0"/>
                        <TextView android:textSize="@dimen/text_size4" android:textColor="@color/white" android:gravity="center" android:id="@+id/tvBlue" android:tag="lightblue" android:background="@color/transparent" android:visibility="gone" android:layout_width="30dp" android:layout_height="20dp" android:layout_marginLeft="@dimen/margin_mid" android:layout_marginRight="@dimen/margin_mid" android:text="0"/>
                        <TextView android:textSize="@dimen/text_size4" android:textColor="@color/white" android:gravity="center" android:id="@+id/tvWhite" android:tag="white" android:background="@color/transparent" android:visibility="gone" android:layout_width="30dp" android:layout_height="20dp" android:layout_marginLeft="@dimen/margin_mid" android:layout_marginRight="@dimen/margin_mid" android:text="0"/>
                        <TextView android:textSize="@dimen/text_size4" android:textColor="@color/white" android:gravity="center" android:id="@+id/tvCrystal" android:tag="crystal" android:background="@color/transparent" android:visibility="gone" android:layout_width="30dp" android:layout_height="20dp" android:layout_marginLeft="@dimen/margin_mid" android:layout_marginRight="@dimen/margin_mid" android:text="0"/>
                        <TextView android:textSize="@dimen/text_size4" android:textColor="@color/white" android:gravity="center" android:id="@+id/tvPink" android:tag="pink" android:background="@color/transparent" android:visibility="gone" android:layout_width="30dp" android:layout_height="20dp" android:layout_marginLeft="@dimen/margin_mid" android:layout_marginRight="@dimen/margin_mid" android:text="0"/>
                    </LinearLayout>
                    <LinearLayout android:gravity="center" android:orientation="horizontal" android:tag="linearLayoutTimerLine10" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="0dp">
                        <RelativeLayout android:gravity="center" android:layout_width="wrap_content" android:layout_height="40dp" android:layout_marginLeft="@dimen/margin_content" android:layout_marginRight="@dimen/margin_content"/>
                        <LinearLayout android:gravity="center" android:layout_width="60dp" android:layout_height="30dp" android:layout_marginLeft="@dimen/margin_content" android:layout_marginRight="@dimen/margin_content"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>
