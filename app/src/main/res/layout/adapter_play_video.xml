<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:id="@+id/rl_all" android:layout_width="match_parent" android:layout_height="match_parent">
    <com.common.uitl.MyVideoPlayer android:id="@+id/jzVideo" android:background="@color/black" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_centerInParent="true"/>
    <LinearLayout android:gravity="center" android:id="@+id/ll_back" android:visibility="gone" android:clickable="true" android:layout_width="100dp" android:layout_height="100dp">
        <ImageView android:layout_width="24dp" android:layout_height="24dp" android:src="@drawable/icon_back_white"/>
    </LinearLayout>
    <RelativeLayout android:layout_width="match_parent" android:layout_height="match_parent" android:layout_marginBottom="20dp">
        <LinearLayout android:gravity="center_horizontal" android:orientation="vertical" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="-15dp" android:layout_alignParentRight="true" android:layout_alignParentBottom="true">
            <LinearLayout android:gravity="center" android:clickable="true" android:layout_width="50dp" android:layout_height="50dp">
                <ImageView android:visibility="gone" android:layout_width="36dp" android:layout_height="31dp" android:src="@drawable/icon_video_heart"/>
            </LinearLayout>
            <TextView android:textSize="12sp" android:textColor="#ffffff" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="25dp" android:text="111"/>
            <ImageView android:id="@+id/iv_heart" android:visibility="gone" android:layout_width="40dp" android:layout_height="40dp" android:layout_marginBottom="50dp" android:src="@drawable/icon_video_heart"/>
            <ImageView android:id="@+id/iv_horizontal" android:visibility="gone" android:layout_width="35dp" android:layout_height="35dp" android:layout_marginBottom="10dp" android:src="@drawable/image_horizontal"/>
            <TextView android:textSize="12sp" android:textColor="#ffffff" android:id="@+id/tv_likeNum" android:visibility="visible" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="-30dp" android:text="0" android:layout_below="@+id/lv_xml"/>
            <ImageView android:id="@+id/iv_commit" android:visibility="visible" android:layout_width="40dp" android:layout_height="40dp" android:layout_marginTop="20dp" android:layout_marginRight="0dp" android:layout_marginBottom="5dp" android:src="@drawable/icon_video_commit" android:layout_below="@+id/tv_likeNum"/>
            <TextView android:textSize="12sp" android:textColor="#ffffff" android:id="@+id/tv_commentNum" android:visibility="visible" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="0dp" android:layout_marginBottom="15dp" android:text="0" android:layout_below="@+id/iv_commit"/>
            <ImageView android:visibility="gone" android:layout_width="40dp" android:layout_height="40dp" android:src="@drawable/icon_video_gift"/>
        </LinearLayout>
        <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="20dp" android:layout_alignParentBottom="true">
            <com.video.CircleImageView android:id="@+id/iv_icon" android:layout_width="42dp" android:layout_height="42dp" android:src="@drawable/user_pic"/>
            <TextView android:textSize="14sp" android:textColor="#ffffff" android:gravity="top" android:id="@+id/tv_context" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="10dp" android:layout_marginRight="@dimen/dp_80" android:layout_below="@+id/iv_icon" android:lineSpacingExtra="3dp"/>
            <TextView android:textSize="15sp" android:textStyle="bold" android:textColor="#ffffff" android:gravity="top" android:id="@+id/tv_name" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:layout_toRightOf="@+id/iv_icon" android:layout_below="@+id/iv_icon" android:layout_alignParentTop="true"/>
            <TextView android:textSize="10sp" android:textStyle="bold" android:textColor="#ffeeeeee" android:gravity="top" android:id="@+id/tv_uid" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:layout_marginTop="6dp" android:layout_toRightOf="@+id/iv_icon" android:layout_below="@+id/tv_name"/>
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>
